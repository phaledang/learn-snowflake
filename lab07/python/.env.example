# Environment Configuration for Lab 07: LangChain OpenAI Assistant
# Copy this to .env and fill in your actual values

# Snowflake Connection Parameters
SNOWFLAKE_ACCOUNT=your_account_identifier
SNOWFLAKE_USER=your_username
SNOWFLAKE_PASSWORD=your_password
SNOWFLAKE_WAREHOUSE=LEARN_WH
SNOWFLAKE_DATABASE=LEARN_SNOWFLAKE
SNOWFLAKE_SCHEMA=SANDBOX

# Azure OpenAI Configuration
AZURE_OPENAI_API_KEY=your_azure_openai_api_key
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_API_VERSION=2025-01-01-preview
AZURE_OPENAI_DEPLOYMENT_NAME=gpt-4o

# Alternative: OpenAI Direct API (if not using Azure)
OPENAI_API_KEY=your_openai_api_key
OPENAI_MODEL=gpt-4-turbo-preview

# LangChain Configuration
LANGCHAIN_TRACING_V2=true
LANGCHAIN_API_KEY=your_langsmith_api_key
LANGCHAIN_PROJECT=snowflake-assistant

# Business Guidelines (can be customized)
BUSINESS_GUIDELINES_PATH=./business_guidelines.md
MAX_CONVERSATION_MEMORY=50
ASSISTANT_NAME=SnowflakeAI